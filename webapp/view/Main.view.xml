<mvc:View controllerName="projetolayout2.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page" title="{i18n>cabeca}">
        <content>

            <f:SimpleForm id="form" layout="ResponsiveLayout">
                <f:content>
                    <core:Title text="Chave da Conexão de vôo" id="titulo"/>

                    <Label id="lbl1" text="Operadora" labelFor="inp1"></Label>
                    <Input id="inp1"></Input>

                    <Label id="lbl2" text="Numero do Vôo" labelFor="inp2"></Label>
                    <Input id="inp2"></Input>

                    <Button id="btn1" text="Enviar"></Button>
                </f:content>
            </f:SimpleForm>

                    <l:VerticalLayout id="Hzt1">
                        <Image id="img1" src="/img/plane.jpeg" width="100%"></Image>
                        <Text id="txt1" text="Avião Decolando"></Text>
                        <Text id="txt2" text="Exemplo de Layout"></Text>

                        <l:HorizontalLayout id="Vrt1">
                            <Button id="btn2" text="Botão 1"></Button>
                            <Button id="btn3" text="Botão 2"></Button>
                            <Button id="btn4" text="Botão 3"></Button>
                        </l:HorizontalLayout>
                    </l:VerticalLayout>
                
        </content>
    </Page>
</mvc:View>
